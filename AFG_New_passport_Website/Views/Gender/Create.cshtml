@model AFG_New_passport_Website.Models.Domain.Gender

@{
    Layout = "_DashboardLayout"; // استفاده از لی‌اوت داشبورد برای این صفحه
}

<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />
<body class="light  dark ">
    <div class="form-container enhanced-form w-50">
        <div class="card shadow">
        <h5 class="text-center mb-4"><i class="fas fa-genderless text-primary"></i> ثبت جنسیت</h5>

            <form id="genderForm" method="post" class="w-75 mx-auto border border-success rounded p-4">
            <div class="form-group mb-3">
                <label for="DName" class="form-label">نام جنسیت</label>
                <input type="text" id="DName" name="DName" class="form-control form-control-lg" required />
                <span asp-validation-for="DName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="EName" class="form-label">Gender Name</label>
                <input type="text" id="EName" name="EName" class="form-control form-control-lg" required />
                <span asp-validation-for="EName" class="text-danger"></span>
            </div>
            <button type="button" class="btn btn-warning" onclick="submitToPreview()">پیش‌نمایش اطلاعات</button>
           @*  <button type="submit" class="btn btn-success w-100">
                <i class="fas fa-save me-1"></i> ذخیره
            </button> *@
        </form>
    </div>
</div>
</body>
<script>
    function submitToPreview() {
        const form = document.getElementById('genderForm');
        form.action = '/Gender/Preview'; // آدرس اکشن پیش‌نمایش
        form.submit();
    }
</script>