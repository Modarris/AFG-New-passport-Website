@model AFG_New_passport_Website.Models.Domain.UserAddress
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var modelError in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@modelError.ErrorMessage</li>
            }
        </ul>
    </div>
}


<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>فرم آدرس</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h4>فرم ثبت آدرس</h4>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="post">

                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        Ciry
                    </div>

                    <div class="mb-3">
                        <label asp-for="PrimaryPhone" class="form-label"></label>
                        <input asp-for="PrimaryPhone" class="form-control" required>
                        <span asp-validation-for="PrimaryPhone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                     postal address
                    </div>

                    <div class="mb-3">
                        <label asp-for="AddressDetails" class="form-label"></label>
                        <input asp-for="AddressDetails" class="form-control" required>
                        <span asp-validation-for="AddressDetails" class="text-danger"></span>
                    </div>
                    <!-- دکمه ثبت -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-success">ثبت آدرس</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
