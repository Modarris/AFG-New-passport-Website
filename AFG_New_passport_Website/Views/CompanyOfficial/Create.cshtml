@model AFG_New_passport_Website.Models.Domain.CompanyOfficial

@{
    Layout = "_DashboardLayout";
}

<div class="d-flex justify-content-center min-vh-50 bg-light mt-3">
    <div class="card shadow-sm p-4 rounded-4" style="width: 100%; max-width: 400px; font-size: 0.9rem;">
        <h5 class="text-center mb-4" style="font-size: 1.1rem;">
            <i class="fas fa-briefcase text-primary"></i>  افزودن 
        </h5>

        <form asp-action="Create" method="post">
            @if (ViewBag.DuplicateMessage != null)
            {
                <div class="alert alert-warning">
                    @Html.Raw(ViewBag.DuplicateMessage)
                </div>
            }
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">ذخیره</button>
        </form>
    </div>
</div>

