<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>صفحه اخبار</title>

    <style>
        body {
            font-family: 'Tahoma', sans-serif;
            direction: rtl;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
            text-align: center;
            padding: 20px;
            background-color: #333;
            color: white;
        }

        .container {
            display: flex;
            gap: 20px;
            padding: 20px;
            flex-wrap: wrap; /* این خط برای واکنش‌گرا بودن ضروری است */
            justify-content: space-between;
        }

        .news-list {
            width: 30%;
            display: flex;
            flex-direction: column;
            gap: 15px;
            transition: all 0.3s ease;
        }

        .news-card {
            cursor: pointer;
            border: 1px solid #ddd;
            padding: 10px;
            border-radius: 8px;
            transition: all 0.3s ease;
            background: #f9f9f9;
        }

            .news-card:hover {
                background-color: #eef;
            }

            .news-card img {
                width: 100%;
                height: 100px;
                object-fit: cover;
                border-radius: 6px;
            }

        .news-detail {
            width: 100%;
            max-width: 100%;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 10px;
            background: white;
            display: none;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
            z-index: 1000;
            text-align: center;
        }

            .news-detail img {
                width: 100%;
                height: 300px;
                object-fit: cover;
                border-radius: 8px;
                margin-bottom: 15px;
            }

        /* طراحی واکنش‌گرا */
        media (max-width: 1024px) {
            .news-list, .news-detail

        {
            width: 100%;
        }

        .container {
            flex-direction: column;
            align-items: center;
        }

        .news-list {
            width: 100%;
            margin-bottom: 20px;
        }

        }

        media (max-width: 768px) {
            header

        {
            padding: 15px;
        }

        .news-list {
            width: 100%;
        }

        .news-detail {
            display: none; /* برای موبایل، نمایش جزئیات به طور پیش فرض خاموش است */
        }

        }
    </style>
</head>
<body>

    <header>
        <h1>صفحه اخبار</h1>
    </header>

    <div class="container">
        <!-- لیست اخبار سمت راست -->
        <div class="news-list">
            <div class="news-card" onclick="showNewsDetails('/images/news/news1.jpg', 'خبر شماره ۱', 'توضیح برای خبر شماره ۱')">
                <img src="~/images/photo/tech-photo3.jpg" alt="خبر ۱">
                <h4>خبر شماره ۱</h4>
            </div>
            <div class="news-card" onclick="showNewsDetails('/images/news/news2.jpg', 'خبر شماره ۲', 'توضیح برای خبر شماره ۲')">
                <img src="~/images/photo/tech-photo2.jpg" alt="خبر ۲">
                <h4>خبر شماره ۲</h4>
            </div>
            <div class="news-card" onclick="showNewsDetails('/images/news/news3.jpg', 'خبر شماره ۳', 'توضیح برای خبر شماره ۳')">
                <img src="~/images/photo/tech-photo3.jpg" alt="خبر ۳">
                <h4>خبر شماره ۳</h4>
            </div>
        </div>

        <!-- نمایش جزییات خبر در وسط -->
        <div class="news-detail" id="newsDetail">
            <img src="~/images/photo/tech-photo3.jpg" alt="جزئیات خبر" id="detailImage">
            <h2 id="detailTitle">خبر شماره ۱</h2>
            <p id="detailDescription">توضیح برای خبر شماره ۱</p>
            <button onclick="closeNewsDetail()">بستن</button>
        </div>
    </div>

    <script>
        function showNewsDetails(image, title, description) {
            // نمایش جزئیات خبر
            document.getElementById("detailImage").src = image + "?v=" + new Date().getTime(); // حل مشکل کش مرورگر
            document.getElementById("detailTitle").textContent = title;
            document.getElementById("detailDescription").textContent = description;

            // نمایش بخش جزئیات خبر
            document.getElementById("newsDetail").style.display = "block";
        }

        function closeNewsDetail() {
            // بستن جزئیات خبر
            document.getElementById("newsDetail").style.display = "none";
        }
    </script>
</body>
</html>
