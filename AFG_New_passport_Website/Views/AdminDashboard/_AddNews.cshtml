@model AFG_New_passport_Website.Models.News

@{
    Layout = null; // این صفحه بدون Layout باشد تا Navbar نمایش داده نشود
}
@using Microsoft.AspNetCore.Mvc.Localization
	@inject IViewLocalizer Localizer


<!DOCTYPE html>
<html lang="en, fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Afg passport Website</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        /* تنظیمات برای کارت */
        .card {
            position: relative;
            padding: 20px;
            margin-top: 20px;
            border-radius: 10px;
            background-color: #f9f9f9;
            font-family: Arial;
        }

        /* تنظیمات برای دکمه‌ها */
        .btn-container {
            position: absolute;
            top: -30px;
            left: 0;
            right: 0;
            display: flex;
            justify-content: space-between; /* دکمه‌ها را افقی و در فاصله یکسان قرار می‌دهد */
            width: 100%;
            padding: 0 20px; /* فاصله از دو طرف */
        }

            .btn-container .btn {
                margin: 0 5px 10px; /* فاصله بین دکمه‌ها */
            }

        /* استایل برای فرم */
        .form-container {
            max-width: 800px;
            margin: 40px auto; /* فاصله از بالا و مرکز کردن فرم */
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

            .form-container h2 {
                text-align: center;
                margin-bottom: 20px;
            }

            .form-container .form-group {
                margin-bottom: 15px;
            }
    </style>
</head>
<body>

    <div class="form-container">

        <div class="card">

            <div class="btn-container">
                <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="index">@Localizer["Home Page"]</a>
                <a class="btn btn-primary" asp-area="" asp-controller="AdminAccount" asp-action="Dashboard">@Localizer["Admin page"]</a>
            </div>

            <h2>@Localizer["Create New News"]</h2>

            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="Title">@Localizer["Title"]</label>
                    <input asp-for="Title" required class="form-control" />
                </div>

                <div class="form-group">
                    <label for="Content">@Localizer["Content"]</label>
                    <textarea asp-for="Content" class="form-control" rows="4" required>@Model.Content</textarea>
                </div>

                <div class="form-group">
                    <label for="Image">@Localizer["Image"]</label>
                    <input type="file" class="form-control" asp-for="ImagePath" />
                </div>

                <button type="submit" class="btn btn-primary mt-3">@Localizer["Create News"]</button>
                <div class="btn-container">
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

