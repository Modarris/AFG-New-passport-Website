@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en, fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Afg passport Website</title>
    <link href="~/css/dashboardstyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Af_Passport_Website.styles.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />

    @using Microsoft.AspNetCore.Mvc.Localization
    @inject IViewLocalizer Localizer
</head>
<body data-bs-spy="scroll" data-bs-target="#navbarSupportedContent" data-bs-offset="70">
    <div class="container">
        <div class="card h-100">
            <header>
                <div class="text-center container">
                    <h3 class="logo pt-5 pb-2 text-white">@Localizer["Directorate of Passport"]</h3>
                </div>

                <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
                    <div class="container">
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item">
                                    <a class="nav-link" href="#newsSection">@Localizer["News"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#userSection">@Localizer["Users"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#formsListSection">@Localizer["Forms List"]</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#genderSection">@Localizer["Add Gender"]</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
        </div>

        <div class="content-section" id="newsSection">
            <h2>@Localizer["News"]</h2>
            <p>@Localizer["News content goes here"]</p>
        </div>

    

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // این اسکریپت به اسکرول و نمایش بخش‌ها کمک می‌کند
        document.addEventListener("DOMContentLoaded", function() {
            const sections = document.querySelectorAll('.content-section');
            sections.forEach(section => {
                section.style.marginTop = '50px';
            });
        });
    </script>
</body>
</html>
