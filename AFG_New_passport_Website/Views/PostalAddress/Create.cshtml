@model AFG_New_passport_Website.Models.PostAddViewModel

@{
	Layout = "_DashboardLayout";
}
<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />
<link href="~/css/dashboardliststyle/pagination.style.css" rel="stylesheet" />


@* ---------------------------------------------------------------------------------------------------- *@
<body class="light  dark ">
	<div class="form-container enhanced-form w-50">
		<div class="card shadow">
			<h3 class="text-center"><i class="fas fa-plus me-2"></i>اضافه کردن پوسته خانه جدید </h3>
			<hr />
			<br />
			<form asp-action="Create" method="post" class="w-75 mx-auto border rounded p-4">
				<select asp-for="CityId" asp-items="@(new SelectList(Model.Cities, "Id", "NameLocal"))" class="form-select my-2">
					<option value="">---</option>
				</select>
				<div class="form-group">
					<label asp-for="Name" class="control-label">نام پوسته خانه</label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>	
				<a asp-action="Index" class="btn btn-secondary mt-3"> <i class="fas fa-arrow-right me-2"></i>بازگشت</a>
				<button type="submit" class="btn btn-success mt-3"><i class="fas fa-check-circle me-2"></i>ثبت</button>
			</form>
		</div>
	</div>
</body>
@* ---------------------------------------------------------------------------------------------------- *@

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
