@model AFG_New_passport_Website.Models.PostAddViewModel

@{
	Layout = "_DashboardLayout";
}
<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />


@* --------------------------------------------------------------------------- *@
<body class="light  dark ">
	<div class="form-container enhanced-form w-50">
		<div class="card shadow">
			<h5 class="text-center mb-4"><i class="fas fa-edit text-primary"></i> ویرایش پوسته خانه</h5>
			<hr />
			<form asp-action="Edit" method="post" class="w-75 mx-auto border rounded p-4">
				<input type="hidden" asp-for="Id" />
				<select asp-for="CityId" asp-items="@(new SelectList(Model.Cities, "Id", "Name"))" class="form-select my-2">
					<option value="">---</option>
				</select>
				<div class="form-group mb-3">
					<label asp-for="Name" class="form-label">نام پوسته خانه</label>
					<input asp-for="Name" class="form-control form-control-lg" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-right me-2"></i>باز گشت</a>
				<button type="submit" class="btn btn-success">
					<i class="fas fa-save me-1"></i> ذخیره تغییرات
				</button>
			</form>
		</div>
	</div>
</body>
@* --------------------------------------------------------------------------- *@


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
