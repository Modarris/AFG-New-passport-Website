@model AFG_New_passport_Website.Models.Domain.PassportType

@{
    Layout = "_DashboardLayout";
}
<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />


@* ---------------------------------------------------------------------------------------------------- *@
<body class="light  dark ">
    <div class="form-container enhanced-form w-50">
        <div class="card shadow">
            <h4 class="text-center"><i class="fas fa-plus me-2 text-success"></i>افزودن نوع پاسپورت </h4>
        <hr />
        <br />

            <form method="post" class="w-75 mx-auto border border-success rounded p-4">
            <div class="form-group mb-3">
                <label asp-for="Type" class="form-label">نوع پاسپورت</label>
                <input asp-for="Type" class="form-control form-control-sm" placeholder="مثلاً: عادی" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <a asp-action="Index" class="btn btn-secondary mt-3"> <i class="fas fa-arrow-right me-2"></i>بازگشت</a>
                <button type="submit" class="btn btn-success mt-3"><i class="fas fa-check-circle me-2"></i>ثبت</button>
        </form>
    </div>
</div>
</body>
@* ---------------------------------------------------------------------------------------------------- *@


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
