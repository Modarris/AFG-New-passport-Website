@{
	Layout = "_DashboardLayout";
}
@model IEnumerable<AFG_New_passport_Website.Models.Domain.PaymentType>

<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />


@* --------------------------------------------------------------------------- *@
<body class="light  dark ">
	<div class="form-container enhanced-form w-50">
		<div class="card shadow">
			<h5 class="text-center mb-4"><i class="fa fa-money-check-alt me-2"></i> لیست نوع پرداخت ها</h5>
			<hr />
			<p><a href="/PaymentTypes/Create" class="btn btn-primary mb-3">
					<i class="fas fa-plus me-2"></i>
				اضافه کردن نوع پرداخت 
				 </a></p>


			<table class="table table-bordered table-hover">
				<thead>
					<tr class="text-center">
						<th> ID </th>
						<th>نوع پرداخت  </th>
						<th>عملیات</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var paymentType in Model)
					{
						<tr>
							<td>@paymentType.Id</td>
							<td>@paymentType.Type</td>
							<td class="d-flex justify-content-between">
								<a href="/PaymentTypes/Edit/@paymentType.Id" class="btn btn-warning btn-sm">
									<i class="fas fa-edit me-1"></i> ویرایش
								</a>

								<a href="/PaymentTypes/Delete/@paymentType.Id" class="btn btn-danger btn-sm">
									حذف
								</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</body>
