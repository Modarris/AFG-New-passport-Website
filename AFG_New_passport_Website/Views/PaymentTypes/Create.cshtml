@model AFG_New_passport_Website.Models.Domain.PaymentType
@{
	Layout = "_DashboardLayout";
}
<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />


@* ---------------------------------------------------------------------------------------------------- *@
<body class="light  dark ">
	<div class="form-container enhanced-form w-50">
		<div class="card shadow">
			<h5 class="text-center mb-4" style="font-size: 1.1rem;">
				<i class="fa fa-money-check-alt me-2"></i> افزودن نوعیت پرداخت
			</h5>
			<hr />
			<br />
			<form action="Create" method="post" class="w-75 mx-auto border rounded p-4">
				<div class="form-group mb-3">
					<label for="Type" class="form-label">نوع پرداخت</label>
					<input type="text" id="Type" name="Type" class="form-control form-control-sm W-75" placeholder="مثلاً: عادی" required />
				</div>
				<a asp-action="Index" class="btn btn-secondary mt-3"> <i class="fas fa-arrow-right me-2"></i>بازگشت</a>
				<button type="submit" class="btn btn-success mt-3"><i class="fas fa-check-circle me-2"></i>ثبت</button>
			</form>
		</div>
	</div>
</body>
@* ---------------------------------------------------------------------------------------------------- *@


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
