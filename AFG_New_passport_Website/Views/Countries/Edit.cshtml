@model AFG_New_passport_Website.Models.Domain.Country

@{
    Layout = "_DashboardLayout"; // استفاده از لی‌اوت داشبورد برای این صفحه
}
<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />

<body class="light  dark ">
<div class="form-container enhanced-form">
    <div class="card shadow">
        <h5 class="text-center mb-4"><i class="fas fa-edit text-primary"></i> ویرایش کشور </h5>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="DName" class="form-label" style="">نام کشور</label>
                <input asp-for="DName" class="form-control form-control-lg" />
                <span asp-validation-for="DName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EName" class="form-label">Country Name</label>
                <input asp-for="EName" class="form-control form-control-lg" />
                <span asp-validation-for="EName" class="text-danger"></span>
            </div>

            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-right me-2"></i>باز گشت</a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-1"></i> ذخیره تغییرات
            </button>
        </form>
    </div>
</div>
</body>