@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ورود ادمین</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Tahoma, sans-serif;
            direction: rtl;
           
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 10px;
        }

        .login-box {
            background: #fff;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 450px;
            transition: all 0.3s ease-in-out;
            min-height: 400px;
        }

            .login-box h3 {
                text-align: center;
                margin-bottom: 25px;
                color: #3e8e7e;
                font-size: 24px;
            }

            .login-box input {
                width: 100%;
                padding: 14px;
                margin-bottom: 18px;
                border: 1px solid #ccc;
                border-radius: 10px;
                font-size: 16px;
            }

                .login-box input:focus {
                    border-color: #3e8e7e;
                    outline: none;
                }

            .login-box button {
                width: 100%;
                padding: 14px;
                background-color: #3e8e7e;
                color: white;
                border: none;
                border-radius: 10px;
                font-weight: bold;
                font-size: 16px;
                transition:0.8s;
            }

                .login-box button:hover {
                    background-color: #2c3e50;
                }

        .error {
            color: red;
            text-align: center;
            margin-top: 10px;
        }

        media (max-width: 576px) {
            .login-box

        {
            padding: 30px 20px;
            border-radius: 15px;
            min-height: 450px;
        }

        .login-box h3 {
            font-size: 22px;
        }

        .login-box input,
        .login-box button {
            font-size: 17px;
            padding: 16px;
        }

        }
    </style>
</head>
<body>

    <div class="login-box">
        <form method="post">
            <h3><i class="fas fa-user-shield"></i> ورود ادمین</h3>
            <input type="text" name="username" placeholder="نام کاربری" required />
            <input type="password" name="password" placeholder="رمز عبور" required />
            <button type="submit"><i class="fas fa-sign-in-alt"></i> ورود</button>

            @if (ViewBag.Error != null)
            {
                <div class="error">@ViewBag.Error</div>
            }
        </form>
    </div>

</body>
</html>
