@model AFG_New_passport_Website.Models.Domain.PublicHoliday

@{
	Layout = "_DashboardLayout";
}
<head>
	
</head>
<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />
<body class="light  dark ">
	<div class="form-container enhanced-form w-50">
		<div class="card shadow">
		

			<h5 class="text-center mb-4" style="font-size: 1.1rem;">
				<i class="fas fa-calendar-day me-2 text-success"></i>  تعیین روز های تعطیل
			</h5>

			<hr />
			<form asp-action="Create" method="post" class="w-100 mx-auto border border-success rounded p-4">
				<div class="form-group">
					<label>تاریخ تعطیل</label>
					<input asp-for="HolidayDate" type="date" class="form-control" />
				</div>
				<div class="form-group">
					<label>عنوان تعطیلی</label>
					<input asp-for="Title" class="form-control" />
				</div>
				
				<a asp-action="Index" class="btn btn-secondary mt-3"> <i class="fas fa-arrow-right me-2"></i>بازگشت</a>
				<button type="submit" class="btn btn-success mt-3"><i class="fas fa-check-circle me-2"></i>ثبت</button
			</form>

			@section Scripts {
				@{
					await Html.RenderPartialAsync("_ValidationScriptsPartial");
				}
			}


		</div>
	</div>


</body>

