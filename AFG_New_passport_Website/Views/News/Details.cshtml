@model AFG_New_passport_Website.Models.News

<div class="container mt-3">
    <div class="card">
        <div class="row">
            <!-- ستون عکس -->
            <div class="col-md-6 p-3">
                <img src="~/images/news/@Model.ImagePath" class="img-fluid" alt="@Model.Title" style="object-fit: cover; height: 300px;">
            </div>

            <!-- ستون متن -->
            <div class="col-md-6 p-3">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text text-muted" style="font-size: 14px;">
                    منتشر شده در: @Model.PublishDate.ToString("yyyy/MM/dd")
                </p>
                <p class="card-text">
                    @Model.Content
                </p>
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">بازگشت به لیست اخبار</a>
                </div>
            </div>
           
        </div>

        
    </div>

</div>
