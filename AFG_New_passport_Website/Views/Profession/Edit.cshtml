@model AFG_New_passport_Website.Models.Domain.Profession

@{
    Layout = "_DashboardLayout"; // استفاده از لی‌اوت داشبورد برای این صفحه
}
<link href="~/css/dashboardliststyle/dashboardliststyle.css" rel="stylesheet" />
<div class="form-container">
    <div class="card">
        <h5 class="text-center mb-4"><i class="fas fa-edit text-primary"></i> ویرایش شغل</h5>

        <form asp-action="Edit" method="post">
            @if (ViewBag.DuplicateMessage != null)
            {
                <div class="alert alert-warning">
                    @Html.Raw(ViewBag.DuplicateMessage)
                </div>
            }
            <div class="form-group">
                <label asp-for="Id" class="control-label">ID</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>


            <div class="form-group mb-3">
                <label asp-for="NameLocal" class="form-label">نام شغل به دری</label>
                <input asp-for="NameLocal" id="persianfield" class="form-control form-control-lg" />
                <span asp-validation-for="NameLocal" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">نام شغل به انگلیسی</label>
                <input asp-for="Name" id="englishfield" class="form-control form-control-lg" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-right me-2"></i>باز گشت</a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-save me-1"></i> ذخیره تغییرات
            </button>
          
        </form>
    </div>
</div>
<script src="~/js/kayboardcontroll.js"></script>